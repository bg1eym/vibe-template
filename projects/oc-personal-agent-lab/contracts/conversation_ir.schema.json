{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ConversationIR",
  "description": "Intermediate representation of parsed conversation",
  "type": "object",
  "required": [
    "task_id",
    "messages",
    "intent",
    "source_message_id",
    "source_ts",
    "intent_type",
    "constraints",
    "acceptance"
  ],
  "properties": {
    "task_id": { "type": "string" },
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["role", "content"],
        "properties": {
          "role": { "type": "string", "enum": ["user", "assistant", "system"] },
          "content": { "type": "string" }
        }
      }
    },
    "intent": { "type": "string" },
    "source_message_id": { "type": "string" },
    "source_ts": { "type": "string" },
    "intent_type": { "type": "string", "enum": ["plan", "report", "execute", "fix", "unknown"] },
    "constraints": {
      "type": "object",
      "required": ["no_external_ops", "write_scope", "output_style"],
      "properties": {
        "no_external_ops": { "type": "boolean" },
        "write_scope": { "type": "string", "enum": ["artifacts_only", "repo_only", "unknown"] },
        "output_style": { "type": "string", "enum": ["summary", "detailed", "unknown"] }
      }
    },
    "acceptance": {
      "type": "object",
      "required": ["must_have_sections", "must_include_fields", "commands"],
      "properties": {
        "must_have_sections": { "type": "array", "items": { "type": "string" } },
        "must_include_fields": { "type": "array", "items": { "type": "string" } },
        "commands": { "type": "array", "items": { "type": "string" } }
      }
    },
    "extraction_errors": { "type": "array", "items": { "type": "string" } }
  }
}
